	"ASP.NET view property": {
		"prefix": "aspp",
		"body": [
			"<div asp-validation-summary=\"ModelOnly\" class=\"text-danger\"></div>",
			"<div class=\"form-group\">",
			"    <label asp-for=\"${1:propertyName}\" class=\"control-label\"></label>",
			"    <input asp-for=\"${1:propertyName}\" class=\"form-control\" />",
			"    <span asp-validation-for=\"${1:propertyName}\" class=\"text-danger\"></span>",
			"</div>",
			"$0"
		],
		"description": "ASP.NET view property",
	},
	"ASP.NET view dropdownlist": {
		"prefix": "aspdd",
		"body": [
			"<div class=\"form-group\">",
			"    <label asp-for=\"${1:propertyName}\" class=\"control-label\"></label>",
			"    <select asp-for=\"${1:propertyName}\" asp-items=\"Model.${2:itemsPropertyName}\" class=\"form-control\"></select>",
			"    <span asp-validation-for=\"${1:propertyName}\" class=\"text-danger\"></span>",
			"</div>",
			"$0"
		],
		"description": "ASP.NET view dropdownlist",
	},
	"ASP.NET view button": {
		"prefix": "aspb",
		"body": [
			"<div class=\"form-group\">",
			"    <input type=\"submit\" value=\"${0:text}\" class=\"btn btn-default\" />",
			"</div>",
			"$0"
		],
		"description": "ASP.NET view button",
	},
	
}