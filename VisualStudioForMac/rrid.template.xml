<CodeTemplates version="3.0">
  <CodeTemplate version="2.0">
    <Header>
      <_Group>benday</_Group>
      <Version />
      <MimeType>text/x-csharp</MimeType>
      <Shortcut>rrid</Shortcut>
      <_Description>ASP.NET controller redirect to action with id</_Description>
      <TemplateType>Expansion</TemplateType>
    </Header>
    <Variables>
      <Variable name="actionName" isIdentifier="true">
        <Default>actionName</Default>
        <_ToolTip></_ToolTip>
      </Variable>
      <Variable name="idValue" isIdentifier="true">
        <Default>idValue</Default>
        <_ToolTip></_ToolTip>
      </Variable>
    </Variables>
    <Code><![CDATA[return RedirectToAction("$actionName$", new { id = $idValue$ });]]></Code>
  </CodeTemplate>
</CodeTemplates>